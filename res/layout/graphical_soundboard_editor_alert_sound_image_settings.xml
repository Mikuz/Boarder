<?xml version="1.0" encoding="utf-8"?>
<ScrollView>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/alert_settings_root"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical" >

        <CheckBox
            android:id="@+id/showSoundImageCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="50px"
            android:layout_y="22px"
            android:text=" Show image" />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/soundImageWidthText"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text=" Width"
                android:textColor="#FFF" />

            <TextView
                android:id="@+id/soundImageHeightText"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text=" Height"
                android:textColor="#FFF" />
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/soundImageWidthInput"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:inputType="number" />

            <EditText
                android:id="@+id/soundImageHeightInput"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:inputType="number" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/scaleWidthHeightCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="50px"
            android:layout_y="22px"
            android:text=" Scale width and height" />
        
        <Button
                android:id="@+id/revertImageSizeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Revert size" />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/setSoundImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change image" />

            <Button
                android:id="@+id/resetSoundImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset default image" />
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/setSoundActiveImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change active image" />

            <Button
                android:id="@+id/resetSoundActiveImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disable active image" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>